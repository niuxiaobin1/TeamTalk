<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8f000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_bg_white_stroke_topcorner4"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/closeImage"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/ic_close_popup" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:text="@string/app_select_card"
                android:textColor="@color/color_33"
                android:textSize="17sp" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/chat_title_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addNewCardTv"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_more_0420"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/app_addCard"
                android:textColor="@color/color_33"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/arrow_right_me2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/chat_title_line_color" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginBottom="20dp"
            android:id="@+id/paymentMthodList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/act_base_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_default_height"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/left_btn"
            android:layout_width="17dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:scaleType="center"
            android:src="@drawable/tt_back_btn" />

        <TextView
            android:id="@+id/base_activity_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:text="1111111111111111111"
            android:gravity="center"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/top_title_size" />

        <ImageView
            android:id="@+id/right_btn"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="14dp" />

        <TextView
            android:id="@+id/right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:textColor="#48B464"
            android:textSize="13sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/chat_title_search"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/send_red_packet_input_conner_bg"
        android:drawableLeft="@mipmap/ic_sousuo"
        android:drawablePadding="10dp"
        android:gravity="left|center_vertical"
        android:hint="@string/tuikit_search"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textColorHint="@color/default_key_color"
        android:textSize="14sp"
        android:visibility="gone" />


</LinearLayout>
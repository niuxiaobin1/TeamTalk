<?xml version="1.0" encoding="utf-8"?>
<com.mogujie.tt.ui.widget.message.AudioRenderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_bk"
    android:paddingLeft="10dp"
    android:paddingBottom="20dp">

    <com.mogujie.tt.ui.widget.IMBaseImageView
        android:id="@+id/user_portrait"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:src="@drawable/tt_round_bg" />

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="35dp"
        android:layout_toRightOf="@id/user_portrait"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:text="小明"
            android:textSize="11sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="35dp"
            android:layout_toRightOf="@id/user_portrait">

            <LinearLayout
                android:id="@+id/message_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="6dp"
                android:background="@mipmap/chat_other_content_bg_copy"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="21dp"
                android:paddingTop="13dp"
                android:paddingRight="13dp"
                android:paddingBottom="13dp">

                <View
                    android:id="@+id/audio_antt_view"
                    android:layout_width="11dp"
                    android:layout_height="17dp"
                    android:background="@drawable/tt_voice_play_other" />

                <TextView
                    android:id="@+id/audio_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/message_layout"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@id/message_layout"
                    android:text="6"
                    android:textSize="14sp" />


            </LinearLayout>

            <View
                android:id="@+id/audio_unread_notify"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="-4dp"
                android:layout_toRightOf="@id/message_layout"
                android:background="@drawable/tt_unread_message_notify_bg"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/message_state_failed"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/message_layout"
                android:adjustViewBounds="true"
                android:contentDescription="@string/message_image_desc"
                android:src="@drawable/tt_msg_tip"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/message_layout"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</com.mogujie.tt.ui.widget.message.AudioRenderView>